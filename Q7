#include <stdio.h>
#include <stdlib.h>

int main(){
		
	int i, j;
	int matrizes[3][3];
	
	
	for(int i = 0; i < 3; i++){
		for(int j = 0; j < 3; j++){
			printf("Quais são os valores da matriz: ");
			scanf("%d", &matrizes[i][j]);
		}
		printf("\n");
	}

	
	
	printf("PRINCIPAL\n\n");
	for(int i = 0; i < 3; i++){
		printf("%d ", matrizes[i][i]);
	}
	printf("\n");
	
	printf("SECUNDÁRIA\n\n");

	for(int i = 0; i < 3; i++){
		printf("%d ", matrizes[i][3 - 1 - i]);
	}
	return 0;
}
